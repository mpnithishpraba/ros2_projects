<?xml version="1.0"?>

<robot name="Mobile_Bot">  

  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <joint name="Base_lidar_joint" type="continuous">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.225" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="blue"/>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="blue"/>
      <origin xyz="0 0 0" rpy="1.57 0 0" />
    </visual>
  </link>

  <link name="caster_wheel">
    <visual>
      <geometry>
        <sphere radius="0.05" />
      </geometry>
    <material name="white"/>
    <origin xyz="0 0 0" rpy="0 0 0" />
    </visual>
  </link>


  <joint name="base_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.2 0 -0.05" rpy="0 0 0"/>
  </joint>    


  <joint name="base_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.15 0.225 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.15 -0.225 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>